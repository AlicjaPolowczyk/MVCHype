@{
    ViewData["Title"] = "Details";
}

<h1> @Model.Name details</h1>

<div>
    <hr />
    <dl class="row">
  
        <dt class = "col-sm-2">
            Last name:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            Location:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
