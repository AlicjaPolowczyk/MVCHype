@model IEnumerable<HYPEDanceStudio.Application.Person.PersonDto>



<h1>Dancers:</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
                
            </td>
            <td>
                    <a class="btn btn-outline-info" asp-controller="Person" asp-action="Details" asp-route-encodedName="@item.EncodedName">Info</a>
                    @if(item.IsEditable)
                    {
                     <a class="btn btn-outline-success" asp-controller="Person" asp-action="Edit" asp-route-encodedName="@item.EncodedName">Edit</a>
                     <a class="btn btn-outline-danger" asp-controller="Person" asp-action="Delete" asp-route-encodedName="@item.EncodedName">Delete</a>
                    }
                  
            </td>
                
                
        </tr>
}
    </tbody>
</table>
